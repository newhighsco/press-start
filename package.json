{
  "name": "@newhighsco/press-start",
  "description": "Chipset + Next.js site starter by New High Score",
  "author": "New High Score",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "template",
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/newhighsco/press-start.git"
  },
  "homepage": "https://github.com/newhighsco/press-start#readme",
  "bugs": {
    "url": "https://github.com/newhighsco/press-start/issues"
  },
  "scripts": {
    "prepare": "husky",
    "clean": "yarn workspace @newhighsco/template clean",
    "start": "yarn workspace @newhighsco/template start",
    "build": "yarn workspace @newhighsco/template build",
    "serve": "yarn workspace @newhighsco/template serve",
    "pretest": "yarn lint",
    "test": "jest --runInBand",
    "test:list": "jest --listTests",
    "analyze": "omlet analyze",
    "lint": "concurrently yarn:lint:*",
    "lint:js": "eslint --cache --ignore-path .gitignore .",
    "lint:css": "stylelint --cache --ignore-path .gitignore '**/*.?(s)css'",
    "format": "concurrently yarn:format:*",
    "format:js": "yarn lint:js --fix",
    "format:css": "yarn lint:css --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@newhighsco/commitlint-config": "1.1.46",
    "@newhighsco/editor-config": "1.2.0",
    "@newhighsco/eslint-config": "4.2.2",
    "@newhighsco/prettier-config": "2.1.32",
    "@newhighsco/release-config": "1.4.13",
    "@newhighsco/stylelint-config": "4.0.18",
    "@omlet/cli": "2.0.0",
    "@qiwi/multi-semantic-release": "7.1.2",
    "@swc/core": "1.13.20",
    "@swc/jest": "0.2.39",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "concurrently": "9.2.1",
    "eslint": "8.57.1",
    "husky": "9.1.7",
    "identity-obj-proxy": "3.0.0",
    "jest": "30.1.3",
    "jest-environment-jsdom": "30.1.2",
    "jest-junit": "16.0.0",
    "prettier": "3.6.2",
    "semantic-release": "24.2.9",
    "stylelint": "16.24.0"
  },
  "commitlint": {
    "extends": [
      "@newhighsco"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@newhighsco/eslint-config"
    ]
  },
  "omlet": {
    "exports": {
      ".": "src/index.js"
    },
    "ignore": [
      "template/**"
    ]
  },
  "multi-release": {
    "ignorePackages": [
      "template"
    ],
    "sequentialInit": true
  },
  "prettier": "@newhighsco/prettier-config",
  "release": {
    "extends": "@newhighsco/release-config"
  },
  "stylelint": {
    "extends": [
      "@newhighsco/stylelint-config"
    ]
  }
}
