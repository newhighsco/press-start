{
  "name": "static-starter",
  "description": "Static site starter",
  "version": "1.0.0",
  "author": "New High Score <hello@newhighsco.re>",
  "license": "ISC",
  "engines": {
    "node": "^10.18.1",
    "yarn": "^1.12.3"
  },
  "scripts": {
    "start": "npm-run-all --parallel start:*",
    "start:dev": "react-static start",
    "start:storybook": "start-storybook -p 9001 -c .storybook",
    "build": "npm-run-all build:production",
    "build:staging": "npm run build:production -- --staging",
    "build:production": "node --max-old-space-size=8192 ./node_modules/.bin/react-static build",
    "build:storybook": "build-storybook -c .storybook -o ./docs",
    "clean": "rm -rf {docs,public}",
    "serve": "serve ./public -p 9000",
    "optimize": "npm-run-all optimize:*",
    "optimize:svg": "find ./src -type f -name '*.svg' -print0 | xargs -0 -n 1 -P 6 svgo --enable=removeXMLNS --enable=removeTitle --enable=removeStyleElement --multipass",
    "optimize:images": "imagemin src/images/* --out-dir=src/images",
    "optimize:static": "imagemin static/* --out-dir=static",
    "qa": "npm-run-all --parallel qa:*",
    "qa:lint": "eslint --cache -f unix .",
    "qa:stylint": "stylint ./src",
    "test": "npm-run-all qa"
  },
  "dependencies": {
    "autoprefixer": "7.2.6",
    "babel-polyfill": "6.26.0",
    "classnames": "2.2.6",
    "css-loader": "0.28.11",
    "dotenv": "5.0.1",
    "fs-extra": "4.0.3",
    "image-webpack-loader": "4.6.0",
    "poststylus": "1.0.0",
    "react": "16.4.1",
    "react-dom": "16.4.2",
    "react-ga": "2.5.3",
    "react-router": "4.3.1",
    "react-static": "5.9.7",
    "responsive-grid": "1.1.0",
    "style-loader": "0.20.3",
    "stylus": "0.54.5",
    "stylus-loader": "3.0.2",
    "stylus-mixins": "0.4.0",
    "svg-react-loader": "0.4.5",
    "svgo": "1.0.5"
  },
  "devDependencies": {
    "@storybook/addon-options": "3.4.10",
    "@storybook/react": "3.4.10",
    "eslint": "3.19.0",
    "eslint-config-standard": "10.2.1",
    "eslint-config-standard-jsx": "8.1.0",
    "eslint-config-standard-react": "5.0.0",
    "eslint-plugin-import": "2.12.0",
    "eslint-plugin-node": "4.2.3",
    "eslint-plugin-promise": "3.8.0",
    "eslint-plugin-react": "7.9.1",
    "eslint-plugin-standard": "3.1.0",
    "imagemin-cli": "3.0.0",
    "npm-run-all": "4.1.3",
    "serve": "8.2.0",
    "stylint": "1.5.9"
  },
  "renovate": {
    "extends": [
      "@newhighsco"
    ]
  }
}
