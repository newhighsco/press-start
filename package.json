{
  "name": "@newhighsco/press-start",
  "description": "Chipset + Next.js site starter by New High Score",
  "version": "2.1.0",
  "author": "New High Score <hello@newhighsco.re>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/newhighsco/press-start.git"
  },
  "homepage": "https://github.com/newhighsco/press-start#readme",
  "bugs": {
    "url": "https://github.com/newhighsco/press-start/issues"
  },
  "main": "src/index.js",
  "files": [
    "src"
  ],
  "scripts": {
    "prepare": "yarn --cwd template install",
    "prestart": "yalc publish && cd template && yalc link $npm_package_name",
    "start": "yarn --cwd template start",
    "prebuild": "yarn format:deps",
    "build": "yarn --cwd template build",
    "serve": "yarn --cwd template serve",
    "test": "yarn lint",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint --cache --ignore-path .gitignore --ext .js,.json,.jsx,.mdx .",
    "lint:css": "stylelint '**/*.{css,scss}' --cache --ignore-path .gitignore",
    "lint:deps": "cd template && yalc check",
    "format": "npm-run-all --parallel format:*",
    "format:js": "yarn lint:js --fix",
    "format:css": "yarn lint:css --fix",
    "format:deps": "cd template && yalc remove $npm_package_name && yarn unlink $npm_package_name && yarn install --check-files"
  },
  "dependencies": {
    "next-seo": "4.28.1"
  },
  "devDependencies": {
    "@commitlint/cli": "15.0.0",
    "@newhighsco/commitlint-config": "1.0.18",
    "@newhighsco/editor-config": "1.1.2",
    "@newhighsco/eslint-config": "2.3.44",
    "@newhighsco/prettier-config": "2.0.14",
    "@newhighsco/release-config": "1.1.4",
    "@newhighsco/stylelint-config": "3.0.6",
    "eslint": "8.3.0",
    "husky": "7.0.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.0",
    "semantic-release": "18.0.1",
    "stylelint": "14.1.0",
    "yalc": "1.0.0-pre.53"
  },
  "peerDependencies": {
    "next": "12.0.4"
  },
  "commitlint": {
    "extends": [
      "@newhighsco"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@newhighsco/eslint-config/react"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint"
    }
  },
  "prettier": "@newhighsco/prettier-config",
  "release": {
    "extends": "@newhighsco/release-config",
    "branches": [
      "main"
    ]
  },
  "renovate": {
    "extends": [
      "@newhighsco"
    ],
    "baseBranches": [
      "main"
    ],
    "pathRules": [
      {
        "paths": [
          "template/package.json"
        ],
        "extends": [
          "@newhighsco"
        ]
      }
    ]
  },
  "stylelint": {
    "extends": [
      "@newhighsco/stylelint-config"
    ]
  }
}
