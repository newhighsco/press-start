{
  "name": "@newhighsco/press-start",
  "description": "Chipset + Next.js site starter by New High Score",
  "version": "1.20.66",
  "author": "New High Score <hello@newhighsco.re>",
  "license": "ISC",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/newhighsco/press-start.git"
  },
  "homepage": "https://github.com/newhighsco/press-start#readme",
  "bugs": {
    "url": "https://github.com/newhighsco/press-start/issues"
  },
  "files": [
    "public",
    "src",
    "env.config.js",
    "next-sitemap.js",
    "next.config.js",
    "postcss.config.js",
    "site.config.js"
  ],
  "scripts": {
    "clean": "rm -rf {.next,build}",
    "start": "next dev",
    "build": "next build && next export --outdir build",
    "postbuild": "next-sitemap",
    "test": "npm run lint",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint --cache --ext .js,.json,.jsx,.mdx .",
    "lint:css": "stylelint '**/*.{css,scss}' --cache",
    "format": "npm-run-all --parallel format:*",
    "format:js": "npm run lint:js -- --fix",
    "format:css": "npm run lint:css -- --fix"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "4.0.2",
    "@newhighsco/chipset": "6.5.8",
    "@newhighsco/next-plugin-svgr": "3.0.16",
    "imagemin-mozjpeg": "9.0.0",
    "imagemin-optipng": "8.0.0",
    "next": "10.0.8",
    "next-compose-plugins": "2.2.1",
    "next-fonts": "1.5.1",
    "next-optimized-images": "2.6.2",
    "next-seo": "4.20.0",
    "next-sitemap": "1.5.16",
    "next-transpile-modules": "6.3.0",
    "next-videos": "1.4.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "sass": "1.32.8"
  },
  "devDependencies": {
    "@commitlint/cli": "12.0.1",
    "@newhighsco/browserslist-config": "1.0.2",
    "@newhighsco/commitlint-config": "1.0.9",
    "@newhighsco/editor-config": "1.1.1",
    "@newhighsco/eslint-config": "2.2.68",
    "@newhighsco/postcss-config": "3.0.70",
    "@newhighsco/prettier-config": "2.0.8",
    "@newhighsco/release-config": "1.0.53",
    "@newhighsco/stylelint-config": "2.0.34",
    "eslint": "7.21.0",
    "husky": "5.1.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "semantic-release": "17.4.1",
    "stylelint": "13.12.0"
  },
  "browserslist": [
    "extends @newhighsco/browserslist-config"
  ],
  "commitlint": {
    "extends": [
      "@newhighsco"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@newhighsco/eslint-config/react"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint"
    }
  },
  "prettier": "@newhighsco/prettier-config",
  "release": {
    "extends": "@newhighsco/release-config",
    "branches": [
      "main"
    ]
  },
  "renovate": {
    "extends": [
      "@newhighsco"
    ],
    "baseBranches": [
      "main"
    ]
  },
  "stylelint": {
    "extends": [
      "@newhighsco/stylelint-config"
    ]
  }
}
